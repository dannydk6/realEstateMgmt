<div id="sidebar">
    <!-- Hidden Input to Store User's username -->
    <input type="hidden" name='username' id="username" value='{{myUser.slug}}'>

    <div class="filters">
      <div class="createBtn">
        <a href=""><u>+ Create New Property</u></a>
      </div>
      <!-- Search bar -->
      <form>
        <div class="input-group">
          <input class="form-control" type="text" placeholder="Search...">
          <span class="input-group-btn">
            <button class="btn btn-primary searchBtn" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </form>
      <!-- ./searchbar -->
      <div class="sorters">
        <div class="sort-name">Property Name &nbsp;
            <span id="propSort"><i class="fa fa-sort"></i></span>
        </div>

        <div id="fields">
            &nbsp;
            <select id="soflow">
            <option>Property Manager</option>
            <option>Property Accountant</option>
            <option>Field #3</option>
            <option>Field #4</option>
            <option>Field #5</option>
            </select>
            &nbsp;
            <span id="fieldSort"><i class="fa fa-sort" ></i></span>
        </div>
      </div>

    </div>


    <div class="properties" id="sidebarProperties">
        
        {{#each myUser.properties}}
        <div class="property" id="{{slug}}">
          <span class="prop-name">{{name}}</span>
          <span class="prop-field">{{manager}}</span>
        </div>
        {{/each}}

    </div>
</div>
<div id="content" class="contentRead">
  <input type="hidden" name="slug" value="{{myUser.properties.0.slug}}">
  <div id="editBtn">
    Edit &nbsp;
    <i class="fa fa-edit"></i>
  </div>
    <!-- Div to house property Photo -->
  <div id="property-photo" class="edit">

  </div>  
  <h3 id="propTitle">{{myUser.properties.0.name}}</h3>
  <div id="infoRead">

        <div class="valuesRead" id="propAddrRead">
          <div class="headerRead">Address: </div>
          <div class="vals">
            <div>{{myUser.properties.0.address.street}}</div>
            <div>{{myUser.properties.0.address.city}}, {{myUser.properties.0.address.st}} {{myUser.properties.0.address.zip}}</div>
          </div>
        </div>

        <div class="valuesRead" id="ownerRead">
          <div class="headerRead">Owner: </div>
          <div class="vals">
            <div>{{myUser.properties.0.owner.name}}</div>
          </div>
        </div>

        <div class="valuesRead" id="ownerAddrRead">
          <div class="headerRead">
            <div>Owner </div>
            <div>Address:</div>
          </div>
          <div class="vals">
            <div>{{myUser.properties.0.owner.address.street}}</div>
            <div>{{myUser.properties.0.owner.address.city}}, {{myUser.properties.0.owner.address.st}} {{myUser.properties.0.owner.address.zip}}</div>
          </div>
        </div>

        <div class="valuesRead" id="propTypeRead">
          <div class="headerRead">Property Type: </div>
          <div class="vals">
            <div>Retail, Office, Residential</div>
          </div>
        </div>     

        <div class="valuesRead" id="propManRead">
          <div class="headerRead">Property Manager: </div>
          <div class="vals">
            <div>{{myUser.properties.0.manager}}</div>
          </div>
        </div>   

        <div class="valuesRead" id="propAccRead">
          <div class="headerRead">Property Accountant: </div>
          <div class="vals">
            <div>{{myUser.properties.0.accountant}}</div>
          </div>
        </div>   

        <div class="valuesRead" id="occupRead">
          <div class="headerRead">Occupancy: </div>
          <div class="vals">
            <div>10%</div>
          </div>
        </div>   

  </div>

</div>
