<div class="container">
    <div class="row">
        <div class="span4"><img class="center-block logo" src="/img/wplogo.png"/></div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <input type="hidden" name="message" value="0{{message}}" id="validation">
                    <div class="alert alert-danger message" id="invalid" role="alert">
                        This user does not exist or there was an incorrect password input.
                    </div>
                    <form method="POST" action="" role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Username" name="username" type="username" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>
                            <!-- Login button -->
                            <button class="btn btn-lg btn-success btn-block" id="loginBtn">Sign In</button>
                        </fieldset>
                    </form>
                    <div class="center-block" id="signup">
                        <a href="/signup"> Not a member? Sign up now. &gt; </a>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<!-- Client-side JavaScript -->
<script type="text/javascript" src="/js/signup.js"></script>


