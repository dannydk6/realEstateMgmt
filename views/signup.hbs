<style type="text/css">
    body{
        background-color: #96CFF4;
    }
</style>

<!-- Container -->
<div class="container">

	<div class="row">
        <div class="span4"><img class="center-block logo" src="/img/wplogo.png"/></div>
    </div>

	<div class="row">
	    <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
			<form role="form" method="POST" action="" >
				<h3 style="text-align: center; color:black">Sign Up</h3>
				<hr class="colorgraph">
				<input type="hidden" name="message" value="0{{message}}" id="validation">
				<div class="alert alert-danger message" id="invalid" role="alert">
  				{{message}}
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-6">
						<div class="form-group">
	                        <input type="text" name="first_name" id="first_name" class="form-control input-md" placeholder="First Name" tabindex="1">
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6">
						<div class="form-group">
							<input type="text" name="last_name" id="last_name" class="form-control input-md" placeholder="Last Name" tabindex="2">
						</div>
					</div>
				</div>
				<div class="form-group">
					<input type="text" name="username" id="username" class="form-control input-md" placeholder="Username" tabindex="3">
				</div>
				<div class="form-group">
					<input type="email" name="email" id="email" class="form-control input-md" placeholder="Email Address" tabindex="4">
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-6">
						<div class="form-group">
							<input type="password" name="password" id="password" class="form-control input-md" placeholder="Password" tabindex="5">
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6">
						<div class="form-group">
							<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-md" placeholder="Confirm Password" tabindex="6">
						</div>
					</div>
				</div>
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
					<div class="col-xs-6 col-md-6"><a href="/login" class="btn btn-success btn-block btn-lg">Sign In</a></div>
				</div>
			</form>
		</div>
	</div>

	<!-- This div allows me to easily add padding -->
	<div class="row">&nbsp;</div>
	<br>
<!-- Container End -->
</div>		

<script type="text/javascript" src="/js/signup.js"></script>

  