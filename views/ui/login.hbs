<div class="card card-login mx-auto mt-4 mb-4">
  <div class="card-header">Login</div>
  <div class="card-body">
    {{#if message}}
      <div class="{{message.style}}" role="alert" style="text-align:center">
        <strong>{{message.strong}}</strong> {{message.text}}
      </div>
    {{/if}}
    <form method="POST" action="">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" id="username" name="username" type="username" placeholder="Enter username">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" id="password" name="password" type="password" placeholder="Password">
      </div>
      <input type="submit" class="btn btn-primary btn-block" value="Login">
    </form>
    <div class="text-center">
      <a class="d-block small mt-3" href="/register">Register an Account</a>
      
      <!-- Forgot Password Implementation Later -->
      <a class="d-block small" href="/forgot-password">Forgot Password?</a>
    </div>
  </div>
</div>

